<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/small_space"
        android:clickable="true"
        android:padding="@dimen/large_space"
        card_view:cardCornerRadius="@dimen/small_space">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_item_pic"
                android:layout_width="@dimen/picture_item_size"
                android:layout_height="@dimen/picture_item_size"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/small_space" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/small_space"
                android:layout_toRightOf="@+id/iv_item_pic"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="11">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/small_space"
                        android:layout_marginTop="@dimen/extra_small_space"
                        android:ellipsize="none"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/medium_text"
                        tools:text="Grindletraps" />

                    <TextView
                        android:id="@+id/tv_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/small_space"
                        android:ellipsize="none"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/small_text"
                        tools:text="[Tarnished Sentinel Medallion]" />

                    <TextView
                        android:id="@+id/tv_ilvl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/small_space"
                        android:ellipsize="none"
                        android:lines="2"
                        android:gravity="center_vertical"
                        android:paddingBottom="@dimen/extra_small_space"
                        android:textSize="@dimen/smaller_text"
                        tools:text="880" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/small_space"
                        android:layout_marginRight="@dimen/small_space"
                        android:textSize="@dimen/extra_small_text"
                        tools:text="1 Day 21H:32M:21s ago" />
                </LinearLayout>


            </LinearLayout>


        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>